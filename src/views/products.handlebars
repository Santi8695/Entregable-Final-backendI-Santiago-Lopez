<h1>Productos</h1>
<ul>
  {{#each products}}
    <li>
      <h3>{{title}}</h3>
      <p>{{description}}</p>
      <p>${{price}}</p>
      <a href="/products/{{_id}}">Ver detalles</a>
      <form method="POST" action="/api/carts/{{../cid}}/products/{{_id}}">
        <button type="submit">Agregar al carrito</button>
      </form>
    </li>
  {{/each}}
</ul>

